{
  "name": "turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "clean": "rm -rf node_modules pnpm-lock.yaml && find . -name node_modules -type d -prune -exec rm -rf '{}' + && pnpm store prune",
    "clean:install": "pnpm run clean && pnpm install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "prettier": "^3.7.4",
    "turbo": "^2.8.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}